{
  "env": {
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "no-console": "off",
    "unicorn/explicit-length-check": "error"
  },
  "extends": "eslint:recommended",
  "plugins": [
    "unicorn"
  ]
}
